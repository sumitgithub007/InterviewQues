
class Main {
    public static void main(String[] args) {
        int[] arr = {1, 2, 3, 4, 5, 6, 7, 8};

        List<Integer> arr2 = Arrays.stream(arr)
                                   .boxed()
                                   .collect(Collectors.toList());

        System.out.println(arr2);
    }
}
