<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
  <parameter name="env" value="https://testenv.com"/>
  <test name="Test">
    <classes>
      <class name="tests.SampleTest"/>
    </classes>
  </test>
</suite>


