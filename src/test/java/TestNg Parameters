package tests;

import org.testng.annotations.Parameters;
import org.testng.annotations.Test;

public class SampleTest {

    @Test
    @Parameters("env")
    public void testEnvironment(String envUrl) {
        System.out.println("Running test on: " + envUrl);
    }
}
